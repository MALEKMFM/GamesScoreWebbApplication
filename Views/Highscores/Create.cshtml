@model Score

<form method="post" asp-controller="HighScores" asp-action="Create">
    <div class="form-group">
        <label asp-for="Game" class="control-label"></label>
        <select asp-for="GameId" class="form-control" asp-items="ViewBag.GameId">
            <option value="">-- Select a game --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="PlayerName">Player name:</label>
        <input asp-for="PlayerName" class="form-control" required />
        <span asp-validation-for="PlayerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HighscoreDate">Date:</label>
        <input asp-for="HighscoreDate" type="datetime-local" class="form-control" required />
        <span asp-validation-for="HighscoreDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Points">Points:</label>
        <input asp-for="Points" type="number" class="form-control" required />
        <span asp-validation-for="Points" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back To List
    </a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

