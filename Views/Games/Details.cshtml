@model Highscore.Controllers.GameDetailsViewModel
<section class="row mb-4">
    <img src="@Model.Game.ImageUrl"
         class="d-block col-5"
         alt="" />
    <div class="col-7">
        <h1 class="mb-3">
            @Model.Game.Name
        </h1>
        <div class="mb-3">
            @Model.Game.Description
        </div>
        <div class="mb-3">
            @Model.Game.ReleaseDate.ToShortDateString()
        </div>
        <button class="p-2"></button>
    </div>
</section>
<partial name="_GameScore" model="Model.HighScores" />

